---
import { siteConfig } from "@/site.config";
import ThemeToggle from "./ThemeToggle.astro";

const navLinks = [
  { href: "/", text: "Home" },
  { href: "/rankings", text: "Rankings" },
  { href: "/competitions", text: "Competitions" },
  { href: "/live", text: "Live Matches" },
];
---

<header class="group relative mb-28 flex items-center justify-between sm:ps-[4.5rem]">
  <div class="flex sm:flex-col">
    <a
      href="/"
      class="inline-flex items-center hover:filter-none sm:relative sm:inline-block text-gray-900 dark:text-gray-100"
      aria-current={Astro.url.pathname === "/" ? "page" : false}
    >
      <svg class="me-3 h-10 w-6 sm:absolute sm:start-[-4.5rem] sm:me-0 sm:h-6 sm:w-6 text-yellow-600 dark:text-yellow-400" aria-hidden="true" focusable="false" fill="none" viewBox="0 0 24 24">
        <title>Tennis Racket Logo</title>
        <!-- Racket Head (oval) -->
        <ellipse cx="12" cy="8" rx="6" ry="8" stroke="currentColor" stroke-width="1.5" fill="none"/>
        <!-- Racket Handle -->
        <line x1="12" y1="16" x2="12" y2="22" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        <!-- Strings (horizontal) -->
        <line x1="8" y1="6" x2="16" y2="6" stroke="currentColor" stroke-width="0.5"/>
        <line x1="8" y1="8" x2="16" y2="8" stroke="currentColor" stroke-width="0.5"/>
        <line x1="8" y1="10" x2="16" y2="10" stroke="currentColor" stroke-width="0.5"/>
        <!-- Strings (vertical) -->
        <line x1="10" y1="2" x2="10" y2="14" stroke="currentColor" stroke-width="0.5"/>
        <line x1="12" y1="1" x2="12" y2="15" stroke="currentColor" stroke-width="0.5"/>
        <line x1="14" y1="2" x2="14" y2="14" stroke="currentColor" stroke-width="0.5"/>
        <!-- Tennis Ball -->
        <circle cx="18" cy="4" r="2" stroke="currentColor" stroke-width="1" fill="currentColor" opacity="0.3"/>
        <path d="M16.5 4c0.8-0.8 1.2-0.8 3 0" stroke="currentColor" stroke-width="0.5" fill="none"/>
      </svg>
      <span class="text-xl font-bold sm:text-2xl">{siteConfig.title}</span>
    </a>
    <nav
      class="hidden sm:mt-2 sm:flex sm:flex-row sm:gap-x-4 sm:ps-0"
      aria-label="Main menu"
    >
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class="underline decoration-dashed underline-offset-4 hover:text-yellow-700 dark:hover:text-yellow-400 hover:decoration-yellow-600 dark:hover:decoration-yellow-500 text-gray-700 dark:text-gray-300 transition-colors"
            aria-current={Astro.url.pathname === link.href ? "page" : false}
          >
            {link.text}
          </a>
        ))
      }
    </nav>
  </div>

  <!-- Theme Toggle Button -->
  <div class="flex items-center">
    <ThemeToggle />
  </div>
</header>