---
import PlayerImage from "./PlayerImage.astro";

export interface Props {
  playerId: string;
  playerName: string;
  limit?: number;
}

const { limit = 5 } = Astro.props;

// Mock recent matches data (in a real app, this would come from an API)
const recentMatches = [
  {
    id: "match1",
    tournament: "Australian Open 2024",
    round: "Quarter-finals",
    date: "2024-01-24",
    opponent: {
      id: "opp1",
      name: "Carlos Alcaraz",
      nationality: "Spain",
      countryCode: "ES"
    },
    result: "W",
    score: "6-4, 6-2, 6-3",
    isWin: true
  },
  {
    id: "match2",
    tournament: "French Open 2024",
    round: "Semi-finals",
    date: "2024-06-07",
    opponent: {
      id: "opp2",
      name: "Novak Djokovic",
      nationality: "Serbia",
      countryCode: "RS"
    },
    result: "L",
    score: "4-6, 6-7, 2-6",
    isWin: false
  },
  {
    id: "match3",
    tournament: "Wimbledon 2024",
    round: "Final",
    date: "2024-07-14",
    opponent: {
      id: "opp3",
