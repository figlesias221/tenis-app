    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 11 3 3L22 4"/>
  </svg>
)}

<!-- Loading / Loader -->
{name === "loader" && (
  <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <line stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12" x2="12" y1="2" y2="6"/>
