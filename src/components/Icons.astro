---
// Icon Library Component using Lucide Icons
export interface Props {
  name: string;
  class?: string;
  size?: string;
}

const { name, class: className = "w-5 h-5", size } = Astro.props;
const iconClass = size ? `w-${size} h-${size}` : className;
---

<!-- Home -->
{name === "home" && (
  <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
    <polyline stroke-linecap="round" stroke-linejoin="round" stroke-width="2" points="9,22 9,12 15,12 15,22"/>
  </svg>
)}

<!-- Rankings / Bar Chart -->
{name === "rankings" && (
  <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <line stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12" x2="12" y1="20" y2="10"/>
    <line stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="18" x2="18" y1="20" y2="4"/>
