)}

<!-- Clock -->
{name === "clock" && (
  <svg class={iconClass} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <circle stroke-linecap="round" stroke-linejoin="round" stroke-width="2" cx="12" cy="12" r="10"/>
