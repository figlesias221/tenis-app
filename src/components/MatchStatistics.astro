---
import type { Match } from "@/lib/api/types";

export interface Props {
  match: Match;
  compact?: boolean;
}

const { match, compact = false } = Astro.props;

// Extract statistics from match data (optional, provider may not supply)
function getMatchStatistics() {
  const m = match as any;
  if (!m?.statistics?.totals?.competitors) {
    return null;
  }

  const competitors: any[] = m.statistics.totals.competitors as any[];
  const player1Stats = competitors.find((c: any) => c.id === match.players[0].id)?.statistics;
  const player2Stats = competitors.find((c: any) => c.id === match.players[1].id)?.statistics;

  if (!player1Stats || !player2Stats) {
    return null;
  }

  return {
    player1: player1Stats,
    player2: player2Stats
  };
}

function calculatePercentage(made: number | undefined, total: number | undefined): string {
  if (!made || !total || total === 0) return '0%';
  return `${Math.round((made / total) * 100)}%`;
}

function formatDuration(minutes: number | undefined): string {
  if (!minutes) return 'N/A';
  const hours = Math.floor(minutes / 60);
  const mins = minutes % 60;
  return hours > 0 ? `${hours}h ${mins}m` : `${mins}m`;
}

const stats = getMatchStatistics();
---

{stats && (
  <div class={`bg-white dark:bg-gray-900 border border-surface-200 dark:border-surface-700 rounded-lg overflow-hidden ${compact ? 'text-sm' : ''}`}>
    <div class="bg-surface-50 dark:bg-surface-800 px-4 py-3 border-b border-surface-200 dark:border-surface-700">
      <div class="flex items-center justify-between">
        <h3 class="font-semibold text-surface-900 dark:text-surface-100 flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Match Statistics
        </h3>
        {(match as any)?.stats?.duration && (
          <span class="text-xs bg-tennis-100 dark:bg-tennis-900/50 text-tennis-800 dark:text-tennis-200 px-2 py-1 rounded-full font-medium">
            Duration: {formatDuration((match as any).stats.duration)}
          </span>
        )}
      </div>
    </div>

    <div class="p-4 space-y-4">
      <!-- Serve Statistics -->
      <div class="grid grid-cols-1 gap-4">
        <div class="bg-surface-50 dark:bg-surface-800 rounded-lg p-3">
          <h4 class="font-medium text-surface-900 dark:text-surface-100 mb-3 text-sm">Serve Statistics</h4>

          <!-- Aces -->
          <div class="grid grid-cols-3 gap-4 mb-3 items-center">
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-green-600 dark:text-green-400">{stats.player1.aces || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Aces</div>
            </div>
            <div class="text-center">
              <div class="text-xs text-surface-500 dark:text-surface-400 bg-surface-200 dark:bg-surface-700 rounded-full px-2 py-1">VS</div>
            </div>
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-green-600 dark:text-green-400">{stats.player2.aces || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Aces</div>
            </div>
          </div>

          <!-- Double Faults -->
          <div class="grid grid-cols-3 gap-4 mb-3 items-center">
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-red-600 dark:text-red-400">{stats.player1.double_faults || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Double Faults</div>
            </div>
            <div class="text-center">
              <div class="text-xs text-surface-500 dark:text-surface-400 bg-surface-200 dark:bg-surface-700 rounded-full px-2 py-1">VS</div>
            </div>
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-red-600 dark:text-red-400">{stats.player2.double_faults || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Double Faults</div>
            </div>
          </div>

          <!-- First Serve Percentage -->
          <div class="grid grid-cols-3 gap-4 items-center">
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-blue-600 dark:text-blue-400">
                {calculatePercentage(stats.player1.first_serve_points_won, stats.player1.first_serve_points)}
              </div>
              <div class="text-xs text-surface-600 dark:text-surface-400">1st Serve %</div>
            </div>
            <div class="text-center">
              <div class="text-xs text-surface-500 dark:text-surface-400 bg-surface-200 dark:bg-surface-700 rounded-full px-2 py-1">VS</div>
            </div>
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-blue-600 dark:text-blue-400">
                {calculatePercentage(stats.player2.first_serve_points_won, stats.player2.first_serve_points)}
              </div>
              <div class="text-xs text-surface-600 dark:text-surface-400">1st Serve %</div>
            </div>
          </div>
        </div>

        <!-- Break Points -->
        <div class="bg-surface-50 dark:bg-surface-800 rounded-lg p-3">
          <h4 class="font-medium text-surface-900 dark:text-surface-100 mb-3 text-sm">Break Points</h4>

          <div class="grid grid-cols-3 gap-4 items-center">
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-orange-600 dark:text-orange-400">
                {stats.player1.break_points_won || 0}/{stats.player1.break_points_faced || 0}
              </div>
              <div class="text-xs text-surface-600 dark:text-surface-400">BP Won/Faced</div>
            </div>
            <div class="text-center">
              <div class="text-xs text-surface-500 dark:text-surface-400 bg-surface-200 dark:bg-surface-700 rounded-full px-2 py-1">VS</div>
            </div>
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-orange-600 dark:text-orange-400">
                {stats.player2.break_points_won || 0}/{stats.player2.break_points_faced || 0}
              </div>
              <div class="text-xs text-surface-600 dark:text-surface-400">BP Won/Faced</div>
            </div>
          </div>
        </div>

        <!-- Total Points -->
        <div class="bg-surface-50 dark:bg-surface-800 rounded-lg p-3">
          <h4 class="font-medium text-surface-900 dark:text-surface-100 mb-3 text-sm">Total Points</h4>

          <div class="grid grid-cols-3 gap-4 items-center">
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-tennis-600 dark:text-tennis-400">{stats.player1.total_points_won || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Points Won</div>
            </div>
            <div class="text-center">
              <div class="text-xs text-surface-500 dark:text-surface-400 bg-surface-200 dark:bg-surface-700 rounded-full px-2 py-1">VS</div>
            </div>
            <div class="text-center bg-white dark:bg-gray-900 rounded-lg p-2 border border-surface-200 dark:border-surface-700">
              <div class="text-lg font-bold text-tennis-600 dark:text-tennis-400">{stats.player2.total_points_won || 0}</div>
              <div class="text-xs text-surface-600 dark:text-surface-400">Points Won</div>
            </div>
          </div>

          <!-- Progress bar showing point distribution -->
          {(stats.player1.total_points_won || 0) + (stats.player2.total_points_won || 0) > 0 && (
            <div class="mt-3">
              <div class="flex h-2 bg-surface-200 dark:bg-surface-700 rounded-full overflow-hidden">
                <div
                  class="bg-tennis-500 transition-all duration-300"
                  style={`width: ${((stats.player1.total_points_won || 0) / ((stats.player1.total_points_won || 0) + (stats.player2.total_points_won || 0))) * 100}%`}
                ></div>
                <div
                  class="bg-orange-500 transition-all duration-300"
                  style={`width: ${((stats.player2.total_points_won || 0) / ((stats.player1.total_points_won || 0) + (stats.player2.total_points_won || 0))) * 100}%`}
                ></div>
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
)}

{!stats && (
  <div class="bg-surface-50 dark:bg-surface-800 border border-surface-200 dark:border-surface-700 rounded-lg p-6 text-center">
    <div class="text-surface-500 dark:text-surface-400 text-sm">
      <svg class="w-8 h-8 mx-auto mb-2 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      Statistics not available for this match
    </div>
  </div>
)}
